<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
    	<record id="maple_inspector_id_view" model="ir.ui.view">
      		<field name="name">maple.inspector_id_view</field>
      		<field name="model">hr.employee</field>
      		<field name="priority" eval="1"/>
      		<field name="inherit_id" ref="hr.view_employee_form"/>
      		<field name="arch" type="xml">
        		<xpath expr="//div[@class='oe_title']" position="inside">
					<label for="inspectNb"/>
					<h1>
						<field name="inspectNb" placeholder="Inspector ID"/>
					</h1>
					<div>
						<field name="barrelCnt" string="Barrel Count" placeholder="Barrel count"/>
					</div>
        		</xpath>
      		</field>
    	</record>

	</data>
</odoo>




