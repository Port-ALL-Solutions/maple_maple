<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>  

        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="producer_list_action">
            <field name="name">maple.producer.list.action</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="producer_filter_view"/>            
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first maple producer
                </p>
            </field>
            <field name="context">{'search_default_maple_producer': 1,'default_customer': 1,'default_supplier': 1,'default_maple_producer': 1}</field>
        </record>

        <record model="ir.actions.act_window" id="purchase_list_action">
            <field name="name">Maple Purchase</field>
            <field name="res_model">purchase.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,pivot,graph,calendar</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first maple purchase
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="pickup_list_action">
            <field name="name">Maple Pick up</field>
            <field name="res_model">stock.picking</field>
            <field name="view_type">form</field>
            <field name="view_mode">calendar,tree,kanban,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first pick up of maple
                </p>
            </field>
        </record>


        <record model="ir.actions.act_window" id="maple_config_grades_action">
            <field name="name">Maple Syrup Grades</field>
            <field name="res_model">maple.product.grade</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the maple syrup grade
                </p>
            </field>
        </record>
        

        <menuitem id="main_maple_menu" name="Maple"/>

        <menuitem id="maple_producer_menu" name="Maple Producers"
                  parent="main_maple_menu"/>

        <menuitem id="maple_producer_menu_list" name="Maple Producers list" parent="maple_producer_menu"
                  action="producer_list_action"/>

        <menuitem id="maple_purchase_menu" name="Maple purchase"
                  parent="main_maple_menu"/>

        <menuitem id="maple_purchase_menu_list" name="Maple purchase list" parent="maple_purchase_menu"
                  action="purchase_list_action"/>

        <menuitem id="maple_pickup_menu" name="Maple pick-up"
                  parent="main_maple_menu"/>

        <menuitem id="maple_pickup_menu_list" name="Maple pick-up list" parent="maple_pickup_menu"
                  action="pickup_list_action"/>

        <menuitem id="maple_config_menu" name="Maple configuration"
                  parent="main_maple_menu"/>

        <menuitem id="maple_config_menu_grades" name="Maple Syrup Grades" parent="maple_config_menu"
                  action="maple_config_grades_action"/>



	</data>
</odoo>
