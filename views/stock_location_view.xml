<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

	    <record id="stock_location_list" model="ir.ui.view">
			<field name="name">maple.stock_location.list</field>
		    <field name="model">stock.location</field>
		    <field name="arch" type="xml">
                <tree string="List of maple location" toolbar="1" >
	     			<field name="id"/>
	     			<field name="name"/>
    				<field name="qty_purchased"/>	     			
    				<field name="qty_stock"/>	     			
    				<field name="maxItem"/>
		    	</tree>          
		    </field>
	    </record>

	    <record id="stock_location_kanban" model="ir.ui.view">
		    <field name="model">stock.location</field>
		    <field name="arch" type="xml">
                <kanban default_group_by="">
	     			<field name="name"/>
    				<field name="qty_stock"/>	     			
					<field name="qty_purchased"/>
					<field name="maxItem"/>
					<field name="kanban_color"/>
                	<templates>
                	   	<t t-name="kanban-box">
                	   		<div t-attf-class="#{kanban_color(record.kanban_color.raw_value)}">
		                        <div class="oe_kanban_card">
									<div class="oe_kanban_content">            	   	
						     			<a type="open"><strong><field name="name"/></strong></a>
						     			<ul>
						     				<li>
						    					Plan: <field name="qty_purchased"/>
						    				</li>
						    				<li>	     			
						    					Now: <field name="qty_stock"/>	     			
						    				</li>
						    				<li>	     			
						    					Max: <field name="maxItem"/>
						    				</li>
				    					</ul>
				    					<field name="current_owner"/>
				    				</div>
									<div class="oe_kanban_bottom_left">		
										<a type="button">
	    									<button name="button_name" type="button_type" class="oe_highlight">
	        									<span>send_to_weight</span>
	    									</button>
										</a>
									</div>
					    		</div>    									    		
				    		</div>		    									    		
		    			</t>
		    		</templates>
		    		
		    	</kanban>          
		    </field>
	    </record>
	
    	<record id="maple_stock_location_form" model="ir.ui.view">
      		<field name="name">maple.stock.location.form</field>
      		<field name="model">stock.location</field>
      		<field name="inherit_id" ref="stock.view_location_form"/>
      		<field name="arch" type="xml">
        		<xpath expr="//field[@name='usage']" position="before">
          			<field name="maxItem"/>
        		</xpath>
      		</field>
    	</record>

    	<record id="maple_stock_view_location_tree" model="ir.ui.view">
      		<field name="name">maple.stock.view.location.tree</field>
      		<field name="model">stock.location</field>
      		<field name="inherit_id" ref="stock.view_location_tree2"/>
      		<field name="arch" type="xml">
        		<xpath expr="//field[@name='display_name']" position="after">
          			<field name="maxItem"/>
        		</xpath>
      		</field>
    	</record>

		<record id="maple_partner_filter_view" model="ir.ui.view">
		    <field name="name">maple.producer.filter.view</field>
		    <field name="model">res.partner</field>
		    <field name="priority">50</field>
		    <field name="arch" type="xml">
		        <search string="Maple Producers">
		            <field name="name"
		               filter_domain="['|','|',('name','ilike',self),('parent_id','ilike',self),('ref','=',self)]"/>
		            <separator/>
		            <filter string="Maple Producers" name="maple_producer" domain="[('maple_producer','=',1)]"/>
		            <filter string="Maple Farms" name="maple_farm" domain="[('maple_farm','=',1)]"/>
		            <filter string="Maple Buyers" name="maple_buyer" domain="[('maple_buyer','=',1)]"/>
		            <separator/>
		            <group expand="0" string="Group By" colspan="10" col="8">
		                <filter string="Region" domain="[]" context="{'group_by' : 'maple_region'}"/>
		                <filter string="Producer" domain="[]" context="{'group_by' : 'parent_id'}"/>
		            </group>
		        </search>
		    </field>
		</record>

	</data>
</odoo>

