<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>  

        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
       <record model="ir.actions.act_window" id="producer_list_action">
            <field name="name">Maple Producers List</field>
            <field name="res_model">res.partner</field>
            <field name="view_id" ref="maple.producer_tree_view" />
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="maple_partner_filter_view"/>            
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first maple producer</p>
            </field>
            <field name="context">{'search_default_maple_producer': 1,'default_customer': 1,'default_supplier': 1,'default_maple_producer': 1}</field>
        </record>

        <record model="ir.actions.act_window" id="buyer_list_action">
            <field name="name">Maple Buyer List</field>
            <field name="res_model">res.partner</field>
            <field name="view_id" ref="maple.buyer_tree_view" />
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="maple_partner_filter_view"/>            
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first maple buyer</p>
            </field>
            <field name="context">{'search_default_maple_buyer': 1,'default_customer': 1,'default_supplier': 1,'default_maple_buyer': 1}</field>
        </record>

        <record model="ir.actions.act_window" id="farm_list_action">
            <field name="name">Maple Farm List</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="farm_tree_view" />            
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Go in producer to add a farm</p>
            </field>
			<field name="search_view_id" ref="maple_partner_filter_view"/>            
            <field name="context">{'search_default_maple_farm': 1}</field> 
        </record>

        <record model="ir.actions.act_window" id="available_maple_list_action">
            <field name="name">Maple available</field>
            <field name="res_model">purchase.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,pivot,graph</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first maple availabitlity
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="confimed_maple_list_action">
            <field name="name">Maple confirmed</field>
            <field name="res_model">purchase.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,pivot,graph,calendar</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first maple syrup confirmation
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="pickup_list_action">
            <field name="name">Maple Pick up</field>
      		<field name="res_model">stock.picking</field>
            <field name="view_type">form</field>
            <field name="view_mode">calendar,tree,kanban,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first pick up of maple
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="maple_config_grades_action">
            <field name="name">Maple Syrup Grades</field>
            <field name="res_model">maple.grade</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the maple syrup grade
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="maple_config_regions_action">
            <field name="name">Maple Syrup Regions</field>
            <field name="res_model">maple.region</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first maple region</p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="maple_container_list_action">
            <field name="name">Maple Container</field>
            <field name="res_model">stock.quant</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
			<field name="view_id" ref="maple_container_tree_view" /> 
            <field name="search_view_id" ref="maple_container_filter_view"/>                        
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first maple container</p>
            </field>
            <field name="context">{'search_default_maple_container': 1,'default_maple_container': 1}</field>
        </record>

        <record model="ir.actions.act_window" id="maple_config_product_action">
            <field name="name">Maple Products</field>
            <field name="res_model">product.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="maple_product_filter_view"/>                        
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first maple product</p>
            </field>
            <field name="context">{'search_default_maple_product': 1,'default_maple_product': 1}</field>
        </record>

         <record model="ir.actions.act_window" id="maple_purchase_list_action">
           	<field name="name">Maple Purchase List</field>
           	<field name="res_model">purchase.order</field>
           	<field name="view_type">form</field>
           	<field name="view_mode">tree,kanban,form</field>
			<field name="view_id" ref="purchase_view_list" /> 
           	<field name="help" type="html">
               <p class="oe_view_nocontent_create">Create your first maple purchase. </p>
           	</field>
       </record>

       <record model="ir.actions.act_window" id="stock_location_list_action">
            <field name="name">Maple Stock Location List</field>
            <field name="res_model">stock.location</field>
            <field name="view_id" ref="maple.stock_location_list" />
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first maple location. </p>
            </field>
        </record>

       <record model="ir.actions.act_window" id="stock_SE1STOCK_list_action">
            <field name="name">SE1 Location List</field>
            <field name="res_model">stock.location</field>
            <field name="view_id" ref="maple.stock_location_list" />
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first maple location. </p>
            </field>
            <field name="search_view_id" ref="location_filter_view"/>            
            <field name="domaine">[('location_id','=','15')]</field>
            <field name="context">{'search_default_maple_stock_SE1': 1}</field>
        </record>




	</data>
</odoo>
