<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="stock.reception_labels">
            <t t-foreach="docs" t-as="o">
                <div class="page" style="margin:0; padding:0; width:73mm; height:47mm">
                    <table class="table table-condensed" t-if="o.pack_operation_ids" width="100%" border="1" style="margin: 0;padding: 0; border:none !important; background-color:grey">
                        <t t-set="has_serial_number" t-value="o.pack_operation_ids.filtered('pack_lot_ids')" groups="stock.group_production_lot"/>
                        <tbody style="margin: 0;padding: 0">
                            <t t-set="pack_operation_ids" t-value="o.pack_operation_ids"/>
                            <t groups="base.group_portal" t-set="pack_operation_ids" t-value="o.pack_operation_ids.sudo()"/>
                            <tr t-foreach="pack_operation_ids" t-as="pack_operation">
                                <td t-if="has_serial_number" style="margin:0; padding:0">
                                    <table class="table table-condensed" t-if="pack_operation.pack_lot_ids" border="1" cellpadding="0" cellspacing="0" style="border:none !important;">
                                        <tr t-foreach="pack_operation.pack_lot_ids" t-as="packlot">
                                            <td style="text-align:center; margin:0; padding:0">
                                                <span t-field="packlot.lot_id"/>
                                                <t t-if="not packlot.lot_id">
                                                    <t t-set="recp_no" t-value="packlot.lot_name"/>
                                                    <span t-esc="recp_no[0:recp_no.find('-')]" style="font-weight:bolder; font-size:3em; margin:0; padding:0;"/>
                                                    <!-- span t-esc="recp_no[recp_no.find('-')+1:len(recp_no)]" style="font-size:.5em"/ -->
                                                    <p style="margin:0; padding:0"><img class="barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', recp_no, 600, 100)" style="width:300px;height:50px"/></p>
                                                </t>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                      </tbody>
                    </table>
                </div>
                <!-- p style="page-break-after:always; margin:0; padding:0"> </p -->
            </t>
        </template>

    </data>
</odoo>