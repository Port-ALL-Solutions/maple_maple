<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="qweb_fpaq_reception_document">
            <t t-name="maple.qweb_fpaq_reception_document">
                <t t-call="report.html_container">
                    <!-- t t-call="report.external_layout">  --><!-- Remplacer par entete avec logos FPAQ-Acheteur [SE/LB] -->

                    <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                    <t t-if="o.id != 42">
                    	<p>Ce rapport est réservé aux emplacements où s'effectuent la pesée.</p>
                    </t>
					
					<!-- Producers list -->
					<t t-set="producers" t-value="[]"/>
					<t t-foreach="o.stock_lines" t-as="r">
					    <t t-set="producers" t-value="producers+[r.producer]"/>
					</t>
					<t t-foreach="set(producers)" t-as="pro">

            			<!-- Individual Producer Report -->
					    <!-- div><strong t-esc="pro.name"/></div -->
					    <t t-set="is_first" t-value="True"/>
					    
							 <div class="header" style="height:70mm;">
		                        <div class="row">
		                            <div class="col-xs-6">
		                                <img src="maple/static/img/fpaq_logo_rapport.jpg" style="max-width:75mm;"/>
		                                <p style="margin-left:12mm; font-size:7pt; line_height:8pt;">Maison de l'UPA<br/>555, boul. Roland-Thérrien Bureau 525<br/>Longueuil QC J4H 4J5<br/>
		                                	<i class="fa fa-phone"/> 450 679-7021<br/><i class="fa fa-fax"/> 450 679-0139<br/><i class="fa fa-globe"/> http://www.siropderable.ca
		                                </p>
		                            </div>
		                            <div class="col-xs-6" style="border:1px solid lightgray;">
		                                <div class="row">
		                            		<div class="col-xs-5">
				                                <t t-if="o.stock_lines[0].buyer.ref != 'LB'">
				                                    <img src="maple/static/img/siropdelest.png" style="max-height:25mm;"/>
				                                </t>
				                                <t t-if="o.stock_lines[0].buyer.ref == 'LB'">
				                                    <img src="maple/static/img/logo-lbmapletreat.png" style="max-height:25mm;"/>
				                                </t>
		                            		</div>
		                                	<div class="col-xs-5">
				                                <p t-if="o.stock_lines[0].buyer.ref != 'LB'">
		                               				<t t-if="o.stock_lines[0].buyer.phone"><i class="fa fa-phone"/><span t-esc="o.stock_lines[0].buyer.phone"/></t><br/>
		                               				<t t-if="o.stock_lines[0].buyer.mobile"><i class="fa fa-fax"/><span t-esc="o.stock_lines[0].buyer.mobile"/></t><br/>
		                               				<t t-if="o.stock_lines[0].buyer.fax"><i class="fa fa-globe"/><span t-esc="o.stock_lines[0].buyer.fax"/></t>
		                               			</p>
		                            		</div>
		                            		<div class="col-xs-2" style="font-size:24pt; font-weight:bolder; background-color:#eeeeee;">
			                                    <span class="page"/>
		                            		</div>
		                            	</div>
		                            	<div class="row">
			                            	<div class="col-xs-12">
												<p t-if="o.stock_lines[0].class_site">
													<t t-set="site" t-value="o.stock_lines[0].class_site"/>
			                             			Numéro de site: <span t-esc="o.stock_lines[0].class_site" style="font-weight:bolder;"/><br/>
			                             			<i class="fa fa-map-marker"/>
			                             			<t t-if="site =='370' or site =='375' or site =='SE1' or site =='LB1'">296, Principale, Saint-Eusèbe QC G0L 2Y0</t>
			                             			<t t-if="site =='177' or site =='298' or site =='SE3' or site =='LB3'">405, Principale, Saint-Eusèbe QC G0L 2Y0</t>
			                             			<t t-if="site =='SENB' or site =='LBNB'">25, Maple Lane, Lake Edward NB E7G 4J2</t>
			                              		</p>
		                              		</div>
		                            	</div>
		                        	</div>
		                        </div> 	
		                    </div>
		                    
		                    <!-- Producer information - 1st page of report -->
		                    <div class="page">
	                            <p t-if="is_first == True" style="text-align: center;font-weight:bolder; margin:0; padding:0;">
	                                FORMULAIRE DE RÉCEPTION DES BARILS PLEINS DU PRODUCTEUR
	                            </p>
	                            <table t-if="is_first == True" class="table table-condensed" style="border: 1px solid grey; font-size:10pt; line-height:11pt;">
	                                <thead>
	                                    <tr>
	                                        <th colspan="2" width="50%"><strong>IDENTIFICATION DE L'ÉRABLIÈRE</strong></th>
	                                        <th colspan="2" width="50%"><strong>ADRESSE DE RETOUR DES BARILS VIDES</strong></th>
	                                    </tr>
	                                </thead>
	                                <tbody>
	                                    <tr style="border: 2px solid black;">
	                                        <td width="25%">No FPAQ du producteur</td>
	                                        <td width="25%" style="text-align:right"><span t-esc="pro.fpaqCode"/></td>
	                                        <td width="25%">Adresse</td>
	                                        <td width="25%" style="text-align:right; white-space: nowrap;"><span t-esc="pro.street"/></td>
	                                    </tr>
	                                    <tr>
	                                        <td width="25%">Société</td>
	                                        <td width="25%" style="text-align:right; white-space: nowrap;"><span t-esc="pro.parent_id.name"/></td>
	                                        <td width="25%">Ville</td>
	                                        <td width="25%" style="text-align:right; white-space: nowrap;"><span t-esc="pro.city"/></td>
	                                    </tr>
	                                    <tr>
	                                        <td width="25%">Prénom et Nom</td>
	                                        <td width="25%" style="text-align:right; white-space: nowrap;"><span t-esc="o.stock_lines[0].producer_contact"/></td>
	                                        <td width="25%">Code postal</td>
	                                        <td width="25%" style="text-align:right; white-space: nowrap;"><span t-esc="pro.zip"/></td>
	                                    </tr>
	                                    <tr>
	                                        <td width="25%">Adresse</td>
	                                        <td width="25%" style="text-align:right; white-space: nowrap;"><span t-esc="pro.parent_id.street"/></td>
	                                        <td width="50%" colspan="2">État du baril</td>
	                                    </tr>
	                                    <tr>
	                                        <td width="25%">Ville</td>
	                                        <td width="25%" style="text-align:right; white-space: nowrap;"><span t-esc="pro.parent_id.city"/></td>
	                                        <td width="25%">O: Bon</td>
	                                        <td width="25%">R: Rouillé</td>
	                                    </tr>
	                                    <tr>
	                                        <td width="25%">Province</td>
	                                        <td width="25%" style="text-align:right; white-space: nowrap;"><span t-esc="pro.parent_id.state_id.name"/></td>
	                                        <td width="25%">L: Légèrement bossé</td>
	                                        <td width="25%">P: Perforé</td>
	                                    </tr>
	                                    <tr>
	                                        <td width="25%">Code postal</td>
	                                        <td width="25%" style="text-align:right; white-space: nowrap;"><span t-esc="pro.parent_id.zip"/></td>
	                                        <td width="25%">B: Bossé</td>
	                                        <td width="25%">N: Non conforme</td>
	                                    </tr>
	                                    <tr>
	                                        <td width="25%">Téléphone</td>
	                                        <td width="25%" style="text-align:right; white-space: nowrap;"><span t-esc="pro.parent_id.phone"/></td>
	                                        <td width="50%">T: Très bossé</td>
	                                        <td width="25%"><![CDATA[&nbsp;]]></td>
	                                    </tr>
	                                </tbody>
	                            </table>
	                            <t t-set="is_first" t-value="False"/>
							            
								        <table class="table table-condensed mt48" t-if="o.stock_lines">
			                                <tbody>
			                                	<tr>
			                                		<td style="text-align:center; margin:0; padding:0; white-space: nowrap; float: left; width:205mm;">
														<div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">No.</div>
				                                        <div style="width:22mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">No Baril</div>
				                                        <div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">Poids brut</div>
				                                        <div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">Tare</div>
				                                        <div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">Genre</div>
				                                        <div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">État</div>
				                                        <div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">Prop</div>
				                                        <div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">Type</div>
				                                        <div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">No.</div>
				                                        <div style="width:22mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">No Baril</div>
				                                        <div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">Poids<br/>brut</div>
				                                        <div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">Tare</div>
				                                        <div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">Genre</div>
				                                        <div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">État</div>
				                                        <div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">Prop</div>
				                                        <div style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">Type</div>
				                                        <div style="clear: both; width: 100%; height:0;"/>
			                                    	</td>
			                                	</tr>
			                                    
			                                    <!--  tr t-foreach="o.stock_lines" t-as="line" -->
			                                    	<!-- t t-if="pro.id==line.producer.id" -->
			                                    <tr>
			                                    	
				                                    
					                                    <td style="text-align:center; margin:0; padding:0; white-space: nowrap; float: left; width:205mm;">
				                                    	    <t t-set="no_ligne" t-value="1"/>
				                                    	    <!--  t t-set="lg_col" t-value="10mm"/ -->
				                                    	    <t t-foreach="o.stock_lines" t-as="line">
				                                    	    	<t t-if="pro.id==line.producer.id">
				                                    	    	
					                                    	    	<!-- left set of columns -->
					                                    	    	<t t-if="line_even">
							                                            <div name="No" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <span t-esc="no_ligne"/>
							                                            </div>
								                                        <div name="barrel_no" style="width:22mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.container_serial"><span t-field="line.container_serial"/></t>
								                                            <t t-if="not line.container_serial"><![CDATA[&nbsp;]]></t>
								                                        </div>
								                                        <div name="barrel_gross_weight" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.container_total_weight"><span t-field="line.container_total_weight"/></t>
								                                            <t t-if="not line.container_total_weight"><![CDATA[&nbsp;]]></t>
								                                        </div>
								                                        <div name="barrel_tare" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.tmp_tare"><span t-field="line.tmp_tare"/></t>
								                                            <t t-if="line.container_tar_weight and not line.tmp_tare"><span t-field="line.container_tar_weight"/></t>
								                                            <t t-if="not line.tmp_tare and not line.container_tar_weight"><![CDATA[&nbsp;]]></t>
								                                        </div>
								                                        <div name="barrel_material" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.tmp_material"><span t-field="line.tmp_material.code"/></t>
								                                            <t t-if="not line.tmp_material"><![CDATA[&nbsp;]]></t>
								                                        </div>
								                                        <div name="barrel_state" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.container_state"><span t-field="line.container_state.code"/></t>
								                                            <t t-if="not line.container_state"><![CDATA[&nbsp;]]></t>
								                                        </div>
								                                        <div name="barrel_owner" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.tmp_owner"><span t-field="line.tmp_owner"/></t>
								                                            <t t-if="line.container_ownership and not line.tmp_owner"><span t-field="line.container_ownership"/></t>
								                                            <t t-if="not line.tmp_owner and not line.container_ownership"><![CDATA[&nbsp;]]></t>
								                                        </div>
								                                        <div name="maple_type" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.product_id"><span t-esc="line.product_id.default_code[:1]"/></t>
								                                            <t t-if="not line.product_id"><![CDATA[&nbsp;]]></t>
								                                        </div>
						                                            </t>
						                                            <!-- right set of columns -->
						                                            <t t-if="line_odd">
							                                            <div name="No" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <span t-esc="no_ligne"/>
							                                            </div>
								                                        <div name="barrel_no" style="width:22mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.container_serial"><span t-field="line.container_serial"/></t>
								                                            <t t-if="not line.container_serial"><![CDATA[&nbsp;]]></t>
								                                        </div>
								                                        <div name="barrel_gross_weight" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.container_total_weight"><span t-field="line.container_total_weight"/></t>
								                                            <t t-if="not line.container_total_weight"><![CDATA[&nbsp;]]></t>
								                                        </div>
								                                        <div name="barrel_tare" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.tmp_tare"><span t-field="line.tmp_tare"/></t>
								                                            <t t-if="line.container_tar_weight and not line.tmp_tare"><span t-field="line.container_tar_weight"/></t>
								                                            <t t-if="not line.tmp_tare and not line.container_tar_weight"><![CDATA[&nbsp;]]></t>
								                                        </div>
								                                        <div name="barrel_material" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.tmp_material"><span t-field="line.tmp_material.code"/></t>
								                                            <t t-if="not line.tmp_material"><![CDATA[&nbsp;]]></t>
								                                        </div>
								                                        <div name="barrel_state" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.container_state"><span t-field="line.container_state.code"/></t>
								                                            <t t-if="not line.container_state"><![CDATA[&nbsp;]]></t>
								                                        </div>
								                                        <div name="barrel_owner" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.tmp_owner"><span t-field="line.tmp_owner"/></t>
								                                            <t t-if="line.container_ownership and not line.tmp_owner"><span t-field="line.container_ownership"/></t>
								                                            <t t-if="not line.tmp_owner and not line.container_ownership"><![CDATA[&nbsp;]]></t>
								                                        </div>
								                                        <div name="maple_type" style="width:10mm; height:5mm; float: left; border: 1px solid lightgrey; text-align:center;">
								                                            <t t-if="line.product_id"><span t-esc="line.product_id.default_code[:1]"/></t>
								                                            <t t-if="not line.product_id"><![CDATA[&nbsp;]]></t>
								                                        </div>
								                                        <!-- rest of line filling -->
								                                        <div style="clear: both; height: 0; width: 100%;"/>
						                                    		</t>
						                                    		
						                                    		<!-- rest of line filling -->
																	<!--  div t-if="line_odd" style="clear: both; height: 0; width: 100%;"/ -->
																	<!--  div t-if="line_odd" class="clearfix" style="height: 0; width: 100%;"><![CDATA[&nbsp;]]></div -->
						                                    		<t t-set="no_ligne" t-value="no_ligne + 1"/>
						                                    								                                    		
					                                    		</t>
					                                    	</t>
				                                    	</td>
			                                    	<!-- /t -->
			                                    </tr>
			                                </tbody>
			                            </table>
						    </div>
						    
						    <div class="footer">
						        <table class="table table-condensed" style="text-align:center; border: 1 px solid white; font-size:7pt; line-height:8pt;">
						            <tr>
						                <td><![CDATA[&nbsp;]]></td>
						                <td><![CDATA[&nbsp;]]></td>
						                <td><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/></td>
						                <!--  span t-esc="time.strftime('%m/%d/%Y',time.strptime(object.datetimefield,'%Y-%m-%d %H:%M:%S'))"/ -->
						                <td><![CDATA[&nbsp;]]></td>
						                <td><![CDATA[&nbsp;]]></td>
					                </tr>
					                <tr>
						                <td style="border-top:1px solid black; width:30%;">Signature du producteur</td>
						                <td style="width:5%;"><![CDATA[&nbsp;]]></td>
						                <td style="border-top:1px solid black; width:30%;">Date d'expédition</td>
						                <td style="width:5%;"><![CDATA[&nbsp;]]></td>
						                <td style="border-top:1px solid black; width:30%;">Signature de l'acheteur</td>
						            </tr>
					            </table>
						    </div>
						    
					<!-- End of reports -->
					</t>

                </t>
            </t>
        </template>
        
        <template id="qweb_fpaq_reception">
            <t t-foreach="docs" t-as="o">
                <t t-call="maple.qweb_fpaq_reception_document" t-lang="o.partner_id.lang"/>
            </t>
        </template>

        <report id="report_fpaq_reception"
            name="maple.qweb_fpaq_reception"
            model="stock.location"
            string="Réception barils pleins"
            report_type="qweb-pdf"
            file="maple.qweb_fpaq_reception"
            />

	</data>
</odoo>