<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>		
	
		<record id="maple_weight_acer_tree_view" model="ir.ui.view">
			<field name="name">maple.weight.acer.tree.view</field>
			<field name="model">maple.weighing_picking</field>
			<field name="arch" type="xml">
				<tree string="Maple weight from Acer">
	                <field name="maple_producer"/>
	                <field name="employee_id"/>
	                <field name="name"/>
   				</tree>
			</field>
		</record>	

		<record id="maple_weight_form_view" model="ir.ui.view">
			<field name="name">maple.weight.form.view</field>
			<field name="model">maple.weighing_picking</field>
			<field name="arch" type="xml">
				<form string="Weight Order">
	               	<header>
	               	</header>
					<sheet>
						<div class="oe_title">
	                        <h1>
	                            Here: <field name="name" readonly="1"/>
	                        </h1>
	                    </div>					
						<div>
							<group>
								<group>
					                <field name="maple_producer"/>
								</group>
								<group>
				                	<field name="employee_id"/>
								</group>
		        		     </group>
		        		</div>
	                    <notebook>
	                        <page string="Weight Lines">
								<field name="weighing_lines" mode="tree">
									<form>
			                            <group>
			                                <group>
	                                            <field name="stock_quant_id"/>		                                
			                                </group>
		                                </group>
	                               	</form>
			                        <tree string="Weight Lines" editable="bottom">
                                        <field name="stock_quant_id"/>		                                
									</tree>
	                            </field>
	                        </page>
	                        <page string="ACER Lines">
								<field name="acer_lines" mode="tree">
									<form>
			                            <group>
			                                <group>
	                                            <field name="maple_producer"/>		                                
			                                </group>
		                                </group>
	                               	</form>
			                        <tree string="ACER lines">
                                        <field name="maple_producer"/>		                                
									</tree>
	                            </field>
	                        </page>
	                    </notebook>
		   			</sheet>
   				</form>
			</field>
		</record>

		<record id="maple_weight_tree_view" model="ir.ui.view">
			<field name="name">maple.weight.tree.view</field>
			<field name="model">stock.quant</field>
			<field name="arch" type="xml">
				<tree string="Maple to weight" editable="1" edit="1" create="0">
	                <field name="location_id" readonly="1" invisible="1"/>
	                <field name="lot_id" readonly="1"/>
	                <field name="buyer_code" readonly="1"/>
	                <field name="producer" readonly="1"/>
	                <field name="product_id" readonly="1"/>
	                <field name="container_type"/>
	                <field name="container_serial"/>
	                <field name="container_state"/>
	                <field name="container_ownership"/>               
	                <field name="container_tar_weight"/>
	                <field name="container_total_weight" sum="1"/>
   				</tree>
			</field>
		</record>	

        <record model="ir.actions.act_window" id="maple_weight_list_action">
            <field name="name">Maple Weight</field>
            <field name="res_model">stock.quant</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
			<field name="view_id" ref="maple_weight_tree_view" /> 
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Can not create anything from here. </p>
            </field>
        </record>
        
	    <menuitem id="maple_weight_menu_list"
	    	name="Weighing"
	    	parent="maple_preparation_menu"
	        action="maple_weight_list_action"/>	

         <record model="ir.actions.act_window" id="maple_weight_acer_list_action">
           	<field name="name">Maple Weight Acer List</field>
           	<field name="res_model">maple.weighing_picking</field>
           	<field name="view_type">form</field>
           	<field name="view_mode">tree,form</field>
			<field name="view_id" ref="maple_weight_acer_tree_view" /> 
           	<field name="help" type="html">
               <p class="oe_view_nocontent_create">No data imported from Acer. </p>
           	</field>
       </record>
       
       <menuitem id="maple_weight_acer_menu_list"
	    	name="Weighing Acer Imports"
	    	parent="maple_weight_menu_list"
	        action="maple_weight_acer_list_action"/>

	</data>
</odoo>
